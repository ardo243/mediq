<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <TextView
        android:id="@+id/textViewWalcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/maron"
        android:textSize="16pt" />

    <TextView
        android:id="@+id/textViewSamatDatang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWalcome"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Silahkan Login Untuk melanjutkan"
        android:textColor="@color/maron"
        android:textSize="8pt"
        android:fontFamily="@font/poppinsregular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSamatDatang"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/editTextuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/username"
            android:hint="UserName"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="12dp" />

        <EditText
            android:id="@+id/editTextpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/password"
            android:hint="Password"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="12dp" />

        <TextView
            android:id="@+id/TextLupaPasswor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lupa Password"
            android:textColor="@color/maron"
            android:fontFamily="@font/poppinsbold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape"
            android:text="Masuk"
            android:fontFamily="@font/poppinsbold" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/google_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewblmPunyaAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Punya Akun?"
                android:fontFamily="@font/poppinsregular" />

            <TextView
                android:id="@+id/textViewblmSudahAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Daftar"
                android:textColor="@color/maron"
                android:fontFamily="@font/poppinsbold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
