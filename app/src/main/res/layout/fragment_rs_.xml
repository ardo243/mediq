<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <!-- Header Atas -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#B0006D"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUMAH SAKIT"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SCROLLVIEW (DAFTAR RUMAH SAKIT) -->
    <ScrollView
        android:id="@+id/scrollViewRS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@+id/bottomNav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Rumah Sakit"
                android:textColor="#B0006D"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Cardview 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:contentPadding="12dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageRS1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rs_jih" />

                    <TextView
                        android:id="@+id/textNamaRS1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS JOGJA INTERNATIONAL HOSPITAL"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnLihatRS1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textAllCaps="false"
                        android:backgroundTint="#B0006D"
                        android:textColor="#FFFFFF"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cardview 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:contentPadding="12dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageRS2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rs_sardjito" />

                    <TextView
                        android:id="@+id/textNamaRS2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RSUP Dr Sardjito"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnLihatRS2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textAllCaps="false"
                        android:backgroundTint="#B0006D"
                        android:textColor="#FFFFFF"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cardview 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:contentPadding="12dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageRS3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rs_betsheda" />

                    <TextView
                        android:id="@+id/textNamaRS3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RS BETHESDA YOGYAKARTA"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnLihatRS3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat"
                        android:textAllCaps="false"
                        android:backgroundTint="#B0006D"
                        android:textColor="#FFFFFF"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation  -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:weightSum="5"
        android:elevation="8dp">

        <!-- Beranda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_home_24" />
            <TextView
                android:text="Beranda"
                android:textSize="12sp"
                android:textColor="#B0006D" />
        </LinearLayout>

        <!-- Keranjang -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cart" />
            <TextView
                android:text="Keranjang"
                android:textSize="12sp"
                android:textColor="#B0006D" />
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_account_circle_24" />
            <TextView
                android:text="Profil"
                android:textSize="12sp"
                android:textColor="#B0006D" />
        </LinearLayout>

        <!-- Konsultasi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message" />
            <TextView
                android:text="Konsultasi"
                android:textSize="12sp"
                android:textColor="#B0006D" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings" />
            <TextView
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="#B0006D" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>